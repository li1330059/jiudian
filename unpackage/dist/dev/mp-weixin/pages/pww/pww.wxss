page {
  width: 100%;
  height: 100%;
}
.tcc {
  width: 100%;
  background: url("https://jhd.wangshangquan.top/static/img/tcbg.png");
  background-size: 100% 100%;
  min-height: 100%;
  background-repeat: no-repeat;
  background-attachment: fixed;
}
.tcc .hdd {
  width: 100%;
  height: 200rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  line-height: 160rpx;
  flex: 0 0 100rpx;
}
.wraper {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.main {
  height: 85vh;
  position: relative;
}
.main-scroll {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.tcc .jpkc .jpkcContent {
  width: 90%;
  margin: 0 auto;
}
.tcc .jpkc .jpkcContent ._ul ._li .iio {
  position: relative;
  width: 100rpx;
  height: 26rpx;
  top: 20rpx;
  left: 645rpx;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
.tcc .jpkc .jpkcContent ._ul ._li .jpkcLeft {
  display: flex;
  background-color: #fff;
